{
  "git": {
    "commitMessage": "release: v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "host": "github.com",
    "assets": [
      ".output/*.zip"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "ignoreRecommendedBump": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "perf", "section": "âš¡ Performance" },
          { "type": "refactor", "section": "â™»ï¸ Refactors" },
          { "type": "docs", "section": "ğŸ“– Documentation" },
          { "type": "style", "section": "ğŸ’„ Styles" },
          { "type": "chore", "section": "ğŸ  Chores" },
          { "type": "build", "section": "ğŸ“¦ Build" },
          { "type": "ci", "section": "ğŸ”§ CI" }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "hooks": {
    "before:init": ["pnpm exec vue-tsc --noEmit"],
    "after:bump": ["pnpm build", "pnpm zip"]
  }
}
